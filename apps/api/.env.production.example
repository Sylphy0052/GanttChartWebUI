# NestJS API Environment Configuration - Production
# Copy this file to .env.production and update the values for your production environment

# Application Environment
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://gantt_user:CHANGE_ME_STRONG_PASSWORD@postgres:5432/gantt_chart

# JWT Configuration
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_KEY_64_CHARACTERS_MINIMUM
JWT_AUDIENCE=gantt-chart-web-ui
JWT_ISSUER=gantt-chart-api

# Server Configuration
PORT=3001

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=https://your-domain.com